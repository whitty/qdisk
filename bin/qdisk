#!/usr/bin/env ruby

require 'qdisk'
require 'optparse'

include QDisk

begin

  options, arguments = parse_options(ARGV)

  if arguments.length > 0
    if options.fetch(:best, false) and (options[:query].nil? or options[:query].length == 0)
      options[:query] = [[:interface, 'usb'], :mounted?]
    end

    command = arguments.shift
    case command
    when 'unmount'
      unmount(options)
    when 'cp'
      begin
        cp(arguments, options)
      rescue SystemCallError => e
        puts e.message
        exit(3)
      end
    when 'wait', 'query'
      if command == 'wait'
        results = wait(arguments,options)
      else
        results = query(arguments,options)
      end
      if results
        results.each do |x|
          # TODO: Tailor query output
          printf "%s %s %s\n", x.device_name, x.mount_paths, x.mounted_by_uid
        end
      else
        exit(10)
      end
    end
  end

rescue OptionParser::ParseError
  exit(1)
rescue NotFound, MissingRequiredArgument, UnknownCommand => e
  puts e.message
  exit(e.code)
rescue Interrupt
  exit(-1)
end
