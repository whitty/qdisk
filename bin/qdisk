#!/usr/bin/env ruby

require 'qdisk'
require 'optparse'

include QDisk

begin

  options, arguments = parse_options(ARGV)

  if arguments.length > 0
    if arguments.first == 'unmount'
      if options.fetch(:best, false)
        options[:query] = [:removable?, [:interface, 'usb'], :mounted?]
      end
      unmount(options)
    end
  end

rescue OptionParser::ParseError
  exit(1)
rescue NotFound => e
  puts e.message
  exit(2)
end
